# FurnitureHeroes Production Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=replace_with_secure_production_key
ALLOWED_HOSTS=furnitureheroes.co.uk,www.furnitureheroes.co.uk

# Database Settings
POSTGRES_DB=furnitureheroes
POSTGRES_USER=furnitureadmin
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://furnitureadmin:secure_password_here@db:5432/furnitureheroes

# Email Settings (if needed)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True

# AWS S3 Settings (if using S3 for static/media files)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name